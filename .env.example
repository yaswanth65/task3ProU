# ==========================================
# Environment Configuration
# Copy this file to .env and update values
# ==========================================

# ============ NODE ENVIRONMENT ============
NODE_ENV=production
PORT=5000

# ============ DATABASE ============
# MongoDB Connection String
# For Local: mongodb://admin:password123@localhost:27017/taskflow?authSource=admin
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/taskflow
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/taskflow

# ============ AUTHENTICATION ============
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-12345
JWT_EXPIRES_IN=7d

# ============ FRONTEND ============
# Frontend URL (for CORS and redirects)
# Local: http://localhost:3000
# Production: https://your-frontend.onrender.com
FRONTEND_URL=https://your-frontend.onrender.com

# ============ RATE LIMITING ============
# Rate limit configuration (in milliseconds)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============ FILE UPLOADS ============
# Maximum file size (in bytes)
MAX_FILE_SIZE=10485760

# ============ LOGGING ============
# Log level: debug, info, warn, error
LOG_LEVEL=info
